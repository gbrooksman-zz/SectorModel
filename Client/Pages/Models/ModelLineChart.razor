@page "/ModelLineChart/{modelId:guid}"

@inject AppState appState
@inject NavigationManager nav

@using SectorModel.Client.Pages.Components

<AppHeader/>

<ModelHeader Model="appState.Model"/>

<LineChart 	Height="400" 
					Width="900" 
					HorizontalGridLines="10" 
					VerticalGridLines="10" 
					Model="appState.Model" />

<div>
	<button class="btn btn-secondary" type="button" @onclick="Close">Close</button>
</div>

@code 
{
	private Model model = new Model();

	[Parameter] public Guid modelId {get; set;}

	protected override void OnInitialized()
	{
		model = appState.ModelList.Where(m => m.Id == modelId).FirstOrDefault();
	}

	private void Close()
	{		
		nav.NavigateTo("/User/StartPage");
	}
}
