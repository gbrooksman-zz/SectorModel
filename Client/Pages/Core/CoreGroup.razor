@page "/Core/CoreGroup"

@inject AppSettings appSettings
@inject HttpClient httpClient

@using SectorModel.Client.Pages.Components
@using SectorModel.Shared.Entities

<AppHeader/>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h4>Current Core Model </h4>
        </div>
        <div class="col-6" style="text-align:right;">
            <span>Starting Date:@model.StartDate.ToShortDateString()</span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
           <ModelEquityGrid ModelEquityList="@modelEquityList" />
        </div>
    </div>
</div>

@code
{
    List<ModelItem> modelEquityList = new List<ModelItem>();
    Model model = new Model();

    protected override async Task OnInitializedAsync()
    {
		model = appSettings.CoreModel;		
	
        modelEquityList = await httpClient.GetFromJsonAsync<List<ModelItem>>($"quote/getmodelbydate?modelId={model.Id}&date={DateTime.Now.Date}&versionNumber={model.Version}").ConfigureAwait(false);
    }
}
